<div class="container top-bg">
  <div class="mt-5">
    <span class="fs-3 fst-italic offset-md-1 bg-light font-monospace login-form">ログイン</span>
  </div>
  <div class="mt-3">
    <span class="fs-6 fst-italic offset-md-1 bg-light">会員の方はこちらからログイン</span>
  </div>


  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inline">
      <%= f.label :メールアドレス, class:"offset-2 col-2 mt-5" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード, class:"offset-2 col-2 mt-3" %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <div class="actions offset-4 mt-4">
      <%= f.submit "ログイン", class:"btn-login" "btn btn-primary btn-lg"  %>
    </div>
  <% end %>

  <div class="mt-3">
    <span class="fs-6 fst-italic offset-md-1 bg-light">会員登録がお済みでない方</span>
  </div>

  <div class="offset-3 mt-5 mb-4">
    <%= link_to "こちら", new_customer_registration_path, class: "signup-link" "btn btn-primary btn-lg"  %>　から新規登録を行ってください.
  </div>
</div>

</div>