<div class="container top-bg">
  <div class="mt-5">
    <span class="fs-3 fst-italic offset-md-1 bg-light signup-form">新規会員登録</span>
  </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customer/shared/error_messages", resource: resource %>

        <div class="form-inline">
　　　　　<%= f.label :　名前, class:"col-1 mt-5" %>
          （姓） <%= f.text_field :family_name, class:"col-3", autofocus: true, placeholder:"令和" %>
          （名）<%= f.text_field :first_name, class:"col-3", autofocus: true, placeholder:"道子" %>
        </div>

        <div class="form-inline">
          <%= f.label :フリガナ, class:"offset-1 col-1 mt-3" %>
          （セイ）<%= f.text_field :kana_family_name, class:"col-3", autofocus: true, placeholder:"レイワ" %>
          （メイ）<%= f.text_field :kana_first_name, class:"col-3", autofocus: true, placeholder:"ミチコ" %>
        </div>

        <div class="row mt-3">
          <%= f.label :メールアドレス, class:"offset-1 col-2" %>
          <%= f.email_field :email, class:"col-3", autofocus: true, placeholder:"sample.example.com", autocomplete: "email" %>
        </div>

        <div class="row mt-3">
          <%= f.label :郵便番号（ハイフンなし）, class:"col-3" %>
          <%= f.text_field :postal_code, class:"col-2", autofocus: true, placeholder:"0000000" %>
        </div>

        <div class="row mt-3">
          <%= f.label :住所, class:"col-3" %>
          <%= f.text_field :address, class:"col-6", autofocus: true, placeholder:"東京都渋谷区代々木神園町0-0" %>
        </div>

        <div class="row mt-3">
          <%= f.label :電話番号（ハイフンなし）, class:"col-3" %>
          <%= f.telephone_field :tel, class:"col-2", autofocus: true, placeholder:"00000000000" %>
        </div>

        <div class="row mt-3">
          <%= f.label :パスワード（6文字以上）, class:"col-3" %>
          <%= f.password_field :password, class:"col-2", autocomplete: "new-password" %>
        </div>

        <div class="row mt-3">
          <%= f.label :パスワード（確認用）, class:"col-3" %>
          <%= f.password_field :password_confirmation, class:"col-2", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-success offset-3 mt-4" %>
        </div>

      <% end %>


      <div class="mt-5">
        <span class="fs-3 fst-italic offset-md-1 bg-light">既に登録済の方</span>
      </div>

      <div class="offset-1 mt-3 mb-4">
        <%= link_to "こちら", new_customer_session_path, class: "signin-link" %>　からログインしてください.
      </div>
</div>