<div class=container>
  <div class="row">
    <div class="col-3">
      <h2 class="p-3"><span class="header">感想の詳細</span></h2>

      <div class="row">
        <table class="table table-bordered">
          <thead>
            <tr class="table">
              <%= @post.post_content %>
            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>

<div class=container>
  <div class="row">
    <div class="col-6">
      <h2 class="p-3"><span class="header">コメントをする</span></h2> 

      <div class="row">
        <table class="table table-bordered">
          <thead>
            <tr class="table">
              <%= form_with(model:[@post, @comment], method: :post) do |f| %>
                <%= f.text_area :comment_content, placeholder: 'コメント' %>
                <%= f.hidden_field :post_id, value: @post.id %>
                <%= f.submit 'コメントする', class: "btn btn-success" %>
              <% end %>
            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>

<div class=container>
  <div class="row">
    <div class="col-６">
      <h2 class="p-3"><span class="header">コメント一覧</span></h2>

      <div class="row">
        <table class="table table-bordered">
          <thead>
            <tr class="table">
              <% @comments.each do |comment| %>
                <%= comment.comment_content %>
              <% end %>
            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>

<div class=container>
  <div class="row">
    <div class="col-3">
      <div class="mt-3 row">
        <%= link_to '商品一覧', items_path, class: "btn btn-primary center" %>
      <div>
    </div>
  </div>
</div>